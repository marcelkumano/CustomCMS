@using ContentModels = Umbraco.Web.PublishedContentModels;
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>@Umbraco.Field("title")</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/lib/bootstrap.css" rel="stylesheet" />
    <link href="~/css/lib/fontawesome-all.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="/css/customcms.geral.css" rel="stylesheet" />
    <link href="/css/customcms.menu.css" rel="stylesheet" />
    <link href="/css/customcms.carousel.css" rel="stylesheet" />
    <link href="/css/customcms.unidades.css" rel="stylesheet" />
    <link href="/css/customcms.novidades.css" rel="stylesheet" />
    <link href="/css/customcms.produtos.css" rel="stylesheet" />

</head>
<!-- NAVBAR
================================================== -->
<body>
    <div class="navbar-wrapper">
        <div class="container">
            <nav class="navbar mycms-navbar mycms-navbar-light">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/">My Co</a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li class="active"><a href="/">Home</a></li>
                            <li><a href="/produtos">Produtos</a></li>
                            <li><a href="/novidades">Novidades</a></li>
                            <li><a href="/unidades">Unidades</a></li>
                            <li><a href="/sobre">Sobre</a></li>
                            <li><a href="/contato">Contato</a></li>
                        </ul>
                    </div>
                </div>
            </nav>

        </div>
    </div>

    @RenderBody()

    <hr class="mycms-linha-divisao">

    <div class="container marketing">
        <!-- /END THE FEATURETTES -->
        <!-- FOOTER -->
        <footer>
           @Umbraco.Field("texto", recursive: true)
        </footer>

    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/scripts/lib/jquery.min.js"></script>
    <script src="/scripts/lib/bootstrap.min.js"></script>
    <script src="/scripts/lib/jquery.stellar.js"></script>
    <script src="/scripts/customcms.home.js"></script>

</body>
</html>
